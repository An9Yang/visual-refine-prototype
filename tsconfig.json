{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true,

    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": false,

    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "noImplicitAny": false,

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
